    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.31",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "commander": "^9.2.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "app-root-path": "^3.0.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "knex": "^2.0.0",
    "morgan": "^1.10.0",
    "openapi-comment-parser": "^1.0.0",
    "pg": "^8.7.3",
    "swagger-ui-express": "^4.3.0"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --no-notify src/index.ts",
    "prepare": "husky install",
    "docker": "./scripts/docker",
    "test": "jest --runInBand --detectOpenHandles",
    "watch": "jest --watch --runInBand --detectOpenHandles",
    "coverage": "jest --coverage && xdg-open ./coverage/lcov-report/index.html &>/dev/null",
    "format": "prettier --write 'src/**/*'",
    "lint": "eslint --max-warnings=0 'src/**/*'",
    "migrate-down": "knex --knexfile ./database/knexfile.js migrate:down",
    "migrate-latest": "knex --knexfile ./database/knexfile.js migrate:latest",
    "migrate-make": "knex --knexfile ./database/knexfile.js migrate:make",
    "migrate-rollback": "knex --knexfile ./database/knexfile.js migrate:rollback",
    "migrate-up": "knex --knexfile ./database/knexfile.js migrate:up"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --check"
    ],
    "*.ts": [
      "eslint --max-warnings=0"
    ]
  }
}
